{
	"name": "nexuscall",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "concurrently \"npm run dev:worker\" \"npm run dev:frontend\"",
		"dev:worker": "wrangler dev",
		"dev:frontend": "vite --config frontend/vite.config.ts",
		"build": "npm run build:frontend && npm run build:worker",
		"build:frontend": "vite build --config frontend/vite.config.ts",
		"build:worker": "wrangler deploy --dry-run",
		"deploy": "npm run build:frontend && wrangler deploy",
		"test": "vitest",
		"cf-typegen": "wrangler types"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.12.4",
		"@tailwindcss/postcss": "^4.1.18",
		"@types/node": "^25.2.1",
		"@types/react": "^19.2.13",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.3",
		"concurrently": "^9.2.1",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.5.2",
		"vite": "^7.3.1",
		"vitest": "~3.2.0",
		"wrangler": "^4.63.0"
	},
	"dependencies": {
		"react": "^19.2.4",
		"react-dom": "^19.2.4"
	}
}
